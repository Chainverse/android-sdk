<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wallet_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".ui.screen.ConnectWalletScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:background="@drawable/chainverse_background"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_screen_wallet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/container"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp"
                    android:src="@drawable/chainverse_logo_2" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/chainverse_button_create"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/chainverse_background_button_import"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="23dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_create" />

                        <TextView
                            android:id="@+id/text_create"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Create Account"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chainverse_button_import"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/chainverse_background_button_create_new"
                        android:paddingHorizontal="23dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_import" />

                        <TextView
                            android:id="@+id/text_import"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Import Account"
                            android:textAllCaps="false"
                            android:textColor="#0046FF"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/chainverse_button_quick_login"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/chainverse_bg_button_quick_login"
                    android:maxLines="1"
                    android:text="Quick Login"
                    android:textAllCaps="false"
                    android:textColor="#0046FF"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>