<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_import_wallet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/chainverse_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:paddingLeft="20dp">

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Import Wallet"-->
<!--                android:textColor="#ffffff"-->
<!--                android:textSize="24dp"-->
<!--                android:textStyle="bold" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_phrase"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/background_border"
                    android:text="Phrase"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/ChainverseColorPrimary" />

                <Button
                    android:id="@+id/button_private_key"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"
                    android:text="Private Key"
                    android:paddingHorizontal="10dp"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/container"
            android:elevation="10dp"
            android:orientation="vertical"
            android:paddingTop="21dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:id="@+id/title_import"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recovery Phrase"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="17dp"
                        android:background="@drawable/chainverse_background_wallet_create_input"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="10dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:textColorHint="#727D92"
                            app:hintEnabled="false"
                            app:hintTextAppearance="@style/ChainverseSDKTextInputLayout">

                            <EditText
                                android:id="@+id/edit_text_import"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@null"
                                android:gravity="top"
                                android:inputType="text|textMultiLine"
                                android:textColor="#8590A6"
                                android:textColorHint="#8590A6"
                                android:textSize="15dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/paste_import"
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/chainverse_background_wallet_create_input"
                                android:text="Paste"
                                android:textAllCaps="false"
                                android:textColor="#B4B5B8"
                                android:textSize="12dp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_error_import"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Wrong Ordered"
                        android:textAlignment="center"
                        android:textColor="@color/danger"
                        android:textSize="13dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/button_import_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="@color/ColorDisable"
                            android:gravity="center"
                            android:paddingVertical="4dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="3dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IMPORT"
                                android:textColor="#ffffff"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/circle_background"
                                android:padding="5dp">

                                <ImageView
                                    android:id="@+id/icon_import_arrow_right"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/arrow_right"
                                    android:tint="@color/ColorDisable" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>