<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No connect wallet"
         />

    <Button
        android:id="@+id/btnChooseWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose wallet with UI"/>


    <Button
        android:id="@+id/btnConnectTrust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Wallet without UI"/>

    <Button
        android:id="@+id/btnSendTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer Trust Wallet"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"/>

</LinearLayout>